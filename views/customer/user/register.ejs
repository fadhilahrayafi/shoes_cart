<form method="post" action="/register">
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="name" name="newName">
      <label class='text-danger'><%= messages.name%></label>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="newEmail">
      <label class='text-danger'><%= messages.email%></label>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="newAddress" rows="3"></textarea>
      <label class='text-danger'><%= messages.address%></label>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" placeholder="Password" name="newPassword">
    <label class='text-danger'><%= messages.password%></label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>