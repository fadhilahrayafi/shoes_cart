<form method="post" action="/profile">
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="name" name="name" value="<%= user.name%>">
      <label class='text-danger'><%= messages.name%></label>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" placeholder="email" name="email" value="<%= user.email%>">
      <label class='text-danger'><%= messages.email%></label>
    </div>
  </div>
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="address" rows="3"><%= user.address%></textarea>
      <label class='text-danger'><%= messages.address%></label>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword"  name="password">
    <label class='text-danger'><%= messages.password%></label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>