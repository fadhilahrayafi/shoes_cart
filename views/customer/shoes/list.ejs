<div class="row text-center m-4">
  <% for (let i = 0; i < shoes.length; i++){ %>
  <div class="col-3 m-2">
    <div class="card" style="width:18rem;">
      <img src="/image/<%= shoes[i].img %>" alt="/image/avatar.gif" width='250px' height="200px">
      <div class="card-body">
        <h5 class="card-title"><%= shoes[i].name %></h5>
        <p class="card-text">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Price : <%= shoes[i].price %>
            </li>
          </ul>
        </p>
        <a href="/cart/<%= shoes[i].id %>" class="btn btn-danger">Add Cart</a>
      </div>
    </div>
  </div>
  <% } %>
</div>