<div class="row text-center">
  <% for (let i = 0; i < shoes.length; i++){ %>
  <div class="col-4">
    <div class="card" style="width: 18rem;">
      <img src="/image/avatar.gif" alt="/image/avatar.gif" width='250px'>
      <div class="card-body">
        <h5 class="card-title"><%= shoes[i].name %></h5>
        <p class="card-text">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Price : <%= formatMoney(shoes[i].price) %>
            </li>
            <li class="list-group-item">
              Stocks : <%= shoes[i].stock %>
            </li>
          </ul>
        </p>
        <a href="/admin/edit/<%= shoes[i].id %>" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
  <% } %>
</div>