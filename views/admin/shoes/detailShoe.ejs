<div class="row text-center">
    <div class="col-4">
        <div class="card" style="width: 18rem;">
            <img src="/image/avatar.gif" alt="/image/avatar.gif" width='250px'>
            <div class="card-body">
                <h5 class="card-title"><%= detail.Shoe.name %></h5>
                <p class="card-text">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            Price : <%= detail.Shoe.price %>
                        </li>
                        <li class="list-group-item">
                            Jumlah : <%= detail.jumlah %>
                        </li>
                        <li class="list-group-item">
                            Sisa Stock : <%= detail.Shoe.stock %>
                        </li>
                    </ul>
                </p>
            </div>
        </div>
    </div>
</div>